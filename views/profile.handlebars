<section class="py-5">
  <h1>Create a New Post!</h1>
  <div class="mb-3">
    <label for="new-post-title" class="form-label">Post Title:</label>
    <input type="email" class="form-control" id="new-post-title" placeholder="Fabulous Title">
  </div>
  <div class="mb-3">
    <label for="post-content" class="form-label">Post Text:</label>
    <textarea class="form-control" id="post-content" placeholder="Your brilliant thoughts..." rows="3"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Post</button>
  </div>
</section>
<!-- my posts-->
<section class="py-5">
    {{#each posts as |post| }}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2>
                    <a href="/view/{{post.id}}">{{post.title}}</a>
                </h2>
                <p class="lead"><strong>{{post.user.username}}</strong></p>
                <p class="mb-0">{{post.content}} <br> {{format_date post.createdAt}}</p>
                <div>
                    <p>{{post.comments.length}} Replies</p>
                    <a href="/view/{{post.id}}"><strong>click to view full post & comments</strong></a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>
<script src="/js/profile.js"></script>