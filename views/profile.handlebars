<section class="py-5">
  <h1>Create a New Post!</h1>
  <form class="form post-form" id="new-post-form">
  <div class="mb-3 row">
    <label for="new-post-title" class="form-label">Post Title:</label>
    <textarea type="text" class="form-input" id="new-post-title" placeholder="Fabulous Title"></textarea>
  </div>
  <div class="mb-3 row">
    <label for="post-content" class="form-label">Post Text:</label>
    <textarea class="form-input" id="post-content" placeholder="Your brilliant thoughts..." rows="3"></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Create Post</button>
  </div>
  </form>
</section>
<!-- my posts-->
<section class="mb-3 row">
    {{#each posts as |post| }}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2>
                    <a href="/profile/{{postId}}">{{post.title}}</a>
                </h2>
                <p class="lead">{{post.user.username}} on {{format_date post.createdAt}}</p>
                <p class="mb-0">{{post.content}} </p>
                <div>
                    <p class="comment-count" >{{post.comments.length}} Replies </p>
                    <a href="/comment/{{postId}}">Click to view full post & comments!</a>
                </div>
                 <button type="submit" class="btn btn-primary post-update" data-id="{{postId}}">Update Post</button>
                <button class="btn btn-primary post-delete" data-id="{{postId}}">Delete Post</button>
            </div>
        </div>
    </div>
    {{/each}}
</section>

<script src="/js/profile.js"></script>