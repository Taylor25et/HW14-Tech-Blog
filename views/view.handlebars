{{!-- viewing a single post --}}

<section class="mb-3 row">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <img id="user-img" src="{{post.user.img}}" class="col-sm-2 mr-3 rounded-circle" width="30" alt="User" />
                <h1 id='post-title' data-id="{{post.id}}">{{post.title}}
                </h1>
                <p class="lead text-muted">{{post.user.username}} on {{format_date post.createdAt}}</p>
                <h4>{{post.content}}</h4><br>
                {{#each post.comments as |comment|}}
                <div>
                    <p class="box">{{comment.user.username}} : {{comment.comment}} on {{format_date comment.createdAt}}
                    </p>
                </div>
                {{/each}}
                <form class="form comment-form" id="comment-form">
                    <div class="form-field">
                        <label for="comment-form" class="col-sm-4 col-form-label">Reply to
                            {{post.user.username}}</label>
                        <textarea name="comment" class="comment-field container my-5"></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit">Add Comment</button>
                    <p class="auth" style="display: none;">Please <a href="/login">signup or login</a> to leave a reply.
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>


<script src="/js/comment.js"></script>