<section class="py-5">
  <div class="row">
    <div class="col-md-6">
      <h2>Login</h2>
      <form class="form login-form">
        <div class="mb-3 row">
          <label for="username-login" class="col-sm-2 col-form-label">Username</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="username-login" required aria-required="true">
          </div>
        </div>
        <div class="mb-3 row">
          <label for="password-login" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password-login" required aria-required="true">
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
    </div>

    <div class="col-md-6">
      <h2>Signup</h2>
      <form class="form signup-form">

        <div class="mb-3 row">
          <label for="username-signup" class="col-sm-2 col-form-label">Username</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="username-signup" required aria-required="true">
          </div>
        </div>
        <div class="mb-3 row">
          <label for="email-signup" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="email-signup" required aria-required="true">
          </div>
        </div>

        <div class="mb-3 row">
          <label for="password-signup" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password-signup" required aria-required="true">
          </div>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Signup</button>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="/js/login.js"></script>
