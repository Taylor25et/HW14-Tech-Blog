<!-- Content section-->

<section class="py-5">
    {{#each posts }}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2>
                    <a href="/posts/{{id}}">{{title}}</a>
                </h2>
                <p class="lead">
                    Posted by <strong>{{user.username}}</strong> on <strong>{{format_date createdAt}}</strong>
                </p>
                <p class="mb-0">{{content}}</p>
            </div>
        </div>
    </div>
    {{/each}}
</section>